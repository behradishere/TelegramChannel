# Telegram API Credentials (from https://my.telegram.org/apps)
API_ID=your_api_id_here
API_HASH=your_api_hash_here
SESSION_NAME=signals_session

# Channel Configuration (choose ONE method)
# Method 1: Public channel username
CHANNEL_USERNAME=your_channel_name

# Method 2: Private channel with ID and access hash
# CHANNEL_ID=1234567890
# CHANNEL_ACCESS_HASH=9876543210123456789

# Method 3: Multiple channels (comma-separated)
# CHANNELS=channel1,1234567890,hash#id

# Trading Backend Configuration
# Options: 'ctrader' or 'mt5'
TRADING_BACKEND=ctrader
DRY_RUN=true

# cTrader Configuration (if using ctrader backend)
BROKER_REST_URL=https://api.your-broker.com/v1/trading
#BROKER_REST_URL=https://api.spotware.com/openapi
CTRADER_TOKEN=your_oauth_token_here

# MetaTrader5 Configuration (if using mt5 backend)
# Leave empty to use existing MT5 terminal session
# MT5_LOGIN=12345678
# MT5_PASSWORD=your_password
# MT5_SERVER=broker-server-name

# Trading Parameters
SYMBOL_XAU=XAUUSD
PIP_SIZE=0.01
DEFAULT_VOLUME=0.01

# Risk Management
ACCOUNT_BALANCE=10000.0
RISK_PERCENT=1.0
MAX_VOLUME=1.0
MIN_VOLUME=0.01

# Logging Configuration
LOG_FILE=logs/bot.log
LOG_LEVEL=INFO
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=3

# Health Monitoring
HEALTH_FILE=logs/health.txt

