# .env.example
# Telegram API Configuration
# Get these from https://my.telegram.org/apps
API_ID=123456
API_HASH=your_api_hash_here
SESSION_NAME=signals_session

# Channel Configuration (choose one method)
# Method 1: Single channel by username
CHANNEL_USERNAME=mychannel

# Method 2: Single private channel by ID + access hash
# CHANNEL_ID=1144215308
# CHANNEL_ACCESS_HASH=7450773130669315489

# Method 3: Multiple channels (comma-separated)
# CHANNELS=channel1,channel2,1144215308

# Trading Backend Configuration
# Options: 'ctrader' or 'mt5'
TRADING_BACKEND=ctrader
DRY_RUN=true

# cTrader Configuration (required if TRADING_BACKEND=ctrader and DRY_RUN=false)
BROKER_REST_URL=https://api.spotware.com/v1/trading
CTRADER_TOKEN=your_ctrader_oauth_token_here

# Trading Parameters
SYMBOL_XAU=XAUUSD
PIP_SIZE=0.01
DEFAULT_VOLUME=0.01
RISK_PERCENT=1.0
MAX_VOLUME=1.0
MIN_VOLUME=0.01

# Account Configuration (for risk management)
ACCOUNT_BALANCE=10000.0

# Logging Configuration
LOG_FILE=bot.log
LOG_LEVEL=INFO
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=3

# Health Monitoring
HEALTH_FILE=health.txt

